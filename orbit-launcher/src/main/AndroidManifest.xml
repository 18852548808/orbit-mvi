<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babylon.orbit.launcher">

    <application>

        <activity
            android:name=".screenlist.ui.OrbitLauncherActivity"
            android:icon="@mipmap/ic_orbit_launcher"
            android:label="@string/orbit_launcher_app_name"
            android:roundIcon="@mipmap/ic_orbit_launcher_round"
            android:screenOrientation="portrait"
            android:taskAffinity="com.babylon.orbit.launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screenlist.ui.OrbitWrapperActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".serializer.notification.action.ClearSerializedStateBroadcastReceiver" />
        <receiver android:name=".serializer.notification.action.SaveSerializedStateBroadcastReceiver" />

    </application>
</manifest>
